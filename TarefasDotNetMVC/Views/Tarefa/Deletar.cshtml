@model TarefasDotNetMVC.Models.Tarefa

@{
    ViewData["Title"] = "Deletar Tarefa";
}

<h2>@ViewData["Title"]</h2>

<hr />

<h2 style="color: red;">Deseja mesmo deletar essa tarefa?<br>(Essa operação é irreversível!)</h2>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label fw-bold">Título</label>
            <div>@Model.Titulo</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Descrição</label>
            <div>@Html.Raw(Model.Descricao.Replace("\n", "<br />"))</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Data de Criação</label>
            <div>@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Status</label>
            <div>@Model.Status.ToString()</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Data de Finalização</label>
            <div>
                @if (Model.DataFinalizacao.HasValue)
                {
                    @Model.DataFinalizacao.Value.ToString("dd/MM/yyyy HH:mm")
                }
                else
                {
                    <span class="text-muted">Não finalizada</span>
                }
            </div>
        </div>
    </div>
</div>

<br>

